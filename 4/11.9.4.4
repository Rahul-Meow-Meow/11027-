\begin{align}
x(n) &= \frac{1}{(n+1)(n+2)}u(n)\\
\end{align}
Using \eqref{eq:APSum},
\begin{align}
X(z) &= z(z-1)log(1-z^{-1}) + z,
\quad \abs{z} > \abs{1}\\
y(n) &= x(n) * u(n)\\
\implies Y(z) &= X(z)U(z)\\
&= z^2\ln{(1-z^{-1})} + \frac{z^2}{z-1}\end{align}
\bigskip
Using contour integral to find Z transform, we get
\begin{align}
    y(n) &= \frac{1}{2\pi j} \oint _C Y(z)z^{n-1}dz\\
    &= \frac{1}{2\pi j} \oint _C z^{n+1}\ln{(1-z^{-1})} + \frac{z^{n+1}}{z-1} dz
\end{align}
Now, using Cauchy's residual theorem for the second term of the integral(=R,say), and observing the fact that one pole exists at z = 1, 
\begin{align}
    R &= \lim_{z \to c}(z-c)f(z)\\
    &=\lim_{z \to 1}z^{n+1}\\
    &=1
\end{align}
Thus,
The first term of the integral(=d(n),say) can be calculated directly.
\begin{align}
    d(n)&=\frac{1}{2\pi j} \oint _C z^{n+1}\ln{(1-z^{-1})}dz\\
    &=\frac{-1}{2\pi j} \oint _C z^{n+1}(z^{-1}+\frac{z^{-2}}{2} + \frac{z^{-3}}{3}+.. + \frac{z^{-(n+1)}}{n+1}+ \frac{z^{-(n+2}}{n+2}+.. dz\\
    &z=e^{jt}\\
    &=\frac{-1}{2\pi} \int_{0}^{2\pi} e^{(n+2)jt}(e^{-jt}+\frac{e^{-2jt}}{2} + \frac{e^{-3jt}}{3}+.. +\frac{z^{-(n+2}jt}{n+2}+.. dz\\
    &=\frac{-1}{n+2}
\end{align}
Thus, 
\begin{align}
    y(n) = 1 - \frac{1}{n+2}
\end{align}
